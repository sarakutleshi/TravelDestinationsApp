<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.traveldestinationsapp">

    <application
        android:allowBackup="true"
        android:label="Travel Destinations App"
        android:theme="@style/Theme.AppCompat">

        <!-- Destination Details Activity -->
        <activity
            android:name="com.example.traveldestinationsapp.DestinationDetailsActivity" />

        <!-- Destinations List Activity -->
        <activity
            android:name="com.example.traveldestinationsapp.ui.DestinationsActivity" />

        <!-- Login Activity -->
        <activity
            android:name="com.example.traveldestinationsapp.ui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
