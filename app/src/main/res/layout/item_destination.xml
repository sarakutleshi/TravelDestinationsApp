<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ivDestinationPhoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDestinationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDestinationCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- TextView for rating stars -->
        <TextView
            android:id="@+id/tvDestinationRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating: ★★★☆☆"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

        <!-- Buttons for changing the rating -->
        <Button
            android:id="@+id/btnIncreaseRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1" />

        <Button
            android:id="@+id/btnDecreaseRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1" />
    </LinearLayout>

</LinearLayout>
